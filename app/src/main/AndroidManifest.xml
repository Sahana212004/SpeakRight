<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.speakright">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SpeakRight"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.SpeakRight">

        <!-- SplashActivity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity -->
        <activity android:name=".LoginActivity" android:exported="true" />

        <!-- ProfileActivity -->
        <activity android:name=".ui.theme.ProfileActivity" android:exported="true" />

        <!-- DashboardActivity -->
        <activity
            android:name=".ui.theme.DashboardActivity"
            android:theme="@style/Theme.SpeakRight.Material"
            android:exported="true" />


        <!-- LevelsActivity -->
        <activity
            android:name=".ui.theme.LevelsActivity"
            android:theme="@style/Theme.SpeakRight.Material" />

        <!-- PracticeActivity -->
        <activity
            android:name=".ui.theme.PracticeActivity"
            android:theme="@style/Theme.SpeakRight.Material" />

        <!-- PronunciationActivity -->
        <activity
            android:name=".ui.theme.PronunciationPracticeActivity"
            android:theme="@style/Theme.SpeakRight.Material" />

        <activity
            android:name=".ui.theme.SpeakingPracticeActivity"
            android:theme="@style/Theme.SpeakRight.Material" />

        <!-- StatsActivity -->
        <activity
            android:name=".ui.theme.StatsActivity"
            android:theme="@style/Theme.SpeakRight.Material" />

        <!-- NotificationsActivity -->
        <activity
            android:name=".ui.theme.NotificationsActivity"
            android:theme="@style/Theme.SpeakRight.Material" />

        <activity
            android:name=".ui.theme.FeedbackActivity"
            android:theme="@style/Theme.SpeakRight.Material" />

        <!-- UserDetailsActivity -->
        <activity
            android:name=".ui.theme.UserDetailsActivity"
            android:theme="@style/Theme.SpeakRight.Material" />

        <!-- LevelDetailActivity -->
        <activity
            android:name=".ui.theme.LevelDetailActivity"
            android:theme="@style/Theme.SpeakRight.Material" />

        <activity
            android:name=".ui.theme.GrammarPracticeActivity"
            android:theme="@style/Theme.SpeakRight.Material" />




    </application>
</manifest>
